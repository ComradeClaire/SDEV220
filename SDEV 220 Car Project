# Superclass
class Vehicle:
    def __init__(self, vehicle_type):
        self.vehicle_type = vehicle_type


# Subclass
class Automobile(Vehicle):
    def __init__(self, year, make, model, doors, roof):
        super().__init__("car")  # Set vehicle type to "car"
        self.year = year
        self.make = make
        self.model = model
        self.doors = doors
        self.roof = roof


def main():
    print("Enter the following information about your car:")

    year = input("Year: ")
    make = input("Make: ")
    model = input("Model: ")

    # Validate number of doors
    while True:
        doors = input("Number of doors (2 or 4): ")
        if doors in ("2", "4"):
            break
        else:
            print("Invalid input. Please enter 2 or 4.")

    # Validate roof type
    while True:
        roof = input("Type of roof (solid or sun roof): ").lower()
        if roof in ("solid", "sun roof"):
            break
        else:
            print("Invalid input. Please enter 'solid' or 'sun roof'.")

    # Create object
    car = Automobile(year, make, model, doors, roof)

    # Display results
    print("\nVehicle Information:")
    print(f"  Vehicle type: {car.vehicle_type}")
    print(f"  Year: {car.year}")
    print(f"  Make: {car.make}")
    print(f"  Model: {car.model}")
    print(f"  Number of doors: {car.doors}")
    print(f"  Type of roof: {car.roof}")


if __name__ == "__main__":
    main()
